<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView

        app:layout_constraintTop_toBottomOf="@id/toolbar_profile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="170dp"
                android:layout_height="151dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar_profile"
                tools:ignore="NotSibling"
                tools:layout_editor_X="0dp"
                tools:layout_editor_Y="178dp" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="70dp"
                android:text="Name"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_X="0dp"
                tools:layout_editor_Y="78dp"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="140dp"
                android:text="Email"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_X="0dp"
                tools:layout_editor_Y="120dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="210dp"
                android:text="Current Weight"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/current_weight_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_X="0dp"
                tools:layout_editor_Y="170dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="280dp"
                android:text="Desired Weight"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/desired_weight_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_X="0dp"
                tools:layout_editor_Y="170dp" />

        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/toolbar_profile"
        layout="@layout/toolbar_profile"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="117dp">

    </include>



</RelativeLayout>