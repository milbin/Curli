<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:background="@drawable/white_card_rounded_hollow"
        android:animateLayoutChanges="true">

        <ImageButton
            android:id="@+id/overflowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_three_dots_24dp"
            android:background="@null"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            >



            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="false"
                android:text="~40 mins"
                android:textAppearance="@style/Subtitle2" />


            <TextView
                android:id="@+id/equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbell ∙ Dumbell ∙ Cables"
                android:textAppearance="@style/Subtitle1" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_below="@id/equipment"
                style="@style/Title"
                android:gravity="center_horizontal"
                android:text="Arms and Chest" />

            <TextView
                android:id="@+id/number_of_exercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_centerHorizontal="false"
                android:text="12 Exercises"
                android:textAppearance="@style/Subtitle2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            >
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/MuscleGroupLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_alignParentEnd="true"
            >
        </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>