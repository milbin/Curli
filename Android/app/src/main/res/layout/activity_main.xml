<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/parentRL">

    <include
        layout="@layout/toolbar_divider"
        android:id="@+id/toolbar"
        >
    </include>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:layout_above="@+id/ongoing_workout_toolbar">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayoutMain"
    android:paddingBottom="30dp"
    >
    <include
        layout="@layout/workout_card"
        android:id="@+id/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />
    <include
        layout="@layout/workout_card"
        />

</LinearLayout>
</ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/ongoing_workout_toolbar"
        android:src="@drawable/ic_add_black_24dp"
        app:fabSize="normal"
        android:theme="@style/AppTheme"
        android:layout_margin="16dp" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/ongoing_workout"
        android:visibility="gone"
        android:id="@+id/ongoing_workout_toolbar"
        android:layout_above="@+id/bottom_app_bar"
        />
    <include
        layout="@layout/bottom_app_bar"
        android:id="@+id/bottom_app_bar"
        />
</RelativeLayout>