<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ongoing_workout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="0dp"
    android:elevation="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/divider_line1"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"/>

        <ImageButton
            android:id="@+id/up_arrow"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/down_arrow"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/ongoing_workout_title"
            android:text="Arms and Chest"
            style="@style/Button"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/timer"
            android:layout_below="@+id/ongoing_workout_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_finish_flag_24dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>