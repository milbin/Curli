<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        >

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Title"
            android:textSize="35sp" />

        <android.support.v7.widget.ActionMenuView
            android:id="@+id/avmMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/spinner_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        >
    <Spinner
        android:id="@+id/muscleGroupSpinner"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/spinner_background"
        android:layout_marginEnd="15dp"
        android:textAlignment="center"
         />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:paddingTop="3dp"
            android:paddingEnd="2dp"
            android:layout_alignEnd="@+id/muscleGroupSpinner"
            />
    <Spinner
        android:id="@+id/equipmentSpinner"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:entries="@array/equipment"
        android:padding="3dp"
        android:background="@drawable/spinner_background"
        android:layout_toEndOf="@+id/muscleGroupSpinner"
        android:textAlignment="center"
         />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:paddingTop="3dp"
            android:paddingEnd="2dp"
            android:layout_alignEnd="@+id/equipmentSpinner"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner_rl"
        android:background="@drawable/gradient"
        >
    <LinearLayout
        android:id="@+id/ExerciseViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"
        >
    </LinearLayout>
   </ScrollView>

