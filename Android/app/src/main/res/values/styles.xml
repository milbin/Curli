<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">#aaaaaa</item>
    </style>

    <style name="CondensedBase" parent="AppTheme">
        <item name="android:fontFamily">@font/sandstone_bold</item>
    </style>
    <style name="Title" parent="CondensedBase">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarTitle" parent="CondensedBase">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sandstone_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Subtitle1" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.038</item>
        <item name="android:textColor">#6a000000</item>
    </style>

    <style name="Subtitle2" parent="CondensedBase">
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="EditTextStyle" parent="CondensedBase">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Body1" parent="CondensedBase">
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Body2" parent="Body1">
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavBarText" parent="Body1">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#5f6267</item>
    </style>

    <style name="spinnerItemStyle" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/sandstone_regular</item>

    </style>

    <style name="spinnerDropDownItemStyle" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/sandstone_regular</item>

    </style>



</resources>
